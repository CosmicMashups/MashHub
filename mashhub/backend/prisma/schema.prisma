generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id        String    @id @db.VarChar(5)
  title     String    @db.VarChar(255)
  artist    String    @db.VarChar(255)
  type      String?   @db.VarChar(100)
  origin    String?   @db.VarChar(255)
  season    String?   @db.VarChar(100)
  year      Int?
  notes     String?   @db.Text
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  sections       SongSection[]
  projectEntries ProjectEntry[]

  @@index([artist])
  @@index([type])
  @@index([year])
  @@map("songs")
}

model SongSection {
  sectionId    String   @id @map("section_id") @db.VarChar(50)
  songId       String   @map("song_id") @db.VarChar(5)
  part         String   @db.VarChar(100)
  bpm          Decimal? @db.Decimal(6, 2)
  key          String?  @db.VarChar(10)
  sectionOrder Int      @map("section_order")
  createdAt    DateTime @default(now()) @map("created_at")

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  projectEntries ProjectEntry[]

  @@unique([songId, sectionOrder])
  @@index([songId])
  @@index([bpm])
  @@index([key])
  @@index([songId, bpm])
  @@index([songId, key])
  @@map("song_sections")
}

model Project {
  id        String   @id @db.VarChar(50)
  name      String   @db.VarChar(255)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  entries ProjectEntry[]

  @@map("projects")
}

model ProjectEntry {
  id          String   @id @db.VarChar(50)
  projectId   String   @map("project_id") @db.VarChar(50)
  songId      String   @map("song_id") @db.VarChar(5)
  sectionId   String?  @map("section_id") @db.VarChar(50)
  sectionName String   @map("section_name") @db.VarChar(100)
  orderIndex  Int      @map("order_index")
  createdAt   DateTime @default(now()) @map("created_at")

  project Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  song    Song         @relation(fields: [songId], references: [id], onDelete: Cascade)
  section SongSection? @relation(fields: [sectionId], references: [sectionId], onDelete: SetNull)

  @@index([projectId])
  @@index([songId])
  @@map("project_entries")
}
